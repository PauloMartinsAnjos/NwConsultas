@model NwConsultas.Models.ViewModels.SavedQueriesViewModel

@{
    ViewData["Title"] = "Queries Salvas";
}

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col-md-8">
            <h1><i class="fas fa-folder-open"></i> Queries Salvas</h1>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Index", "QueryBuilder")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nova Query
            </a>
        </div>
    </div>

    <!-- Busca -->
    <div class="row mb-3">
        <div class="col-md-6">
            <form method="get" action="@Url.Action("Index")">
                <div class="input-group">
                    <input type="text" name="searchTerm" class="form-control" 
                           placeholder="Buscar por nome ou descrição..." 
                           value="@Model.SearchTerm">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                    @if (!string.IsNullOrEmpty(Model.SearchTerm))
                    {
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Limpar
                        </a>
                    }
                </div>
            </form>
        </div>
        <div class="col-md-6 text-end">
            <span class="text-muted">Total: @Model.TotalQueries queries</span>
        </div>
    </div>

    <!-- Lista de Queries -->
    @if (Model.Queries != null && Model.Queries.Any())
    {
        <div class="row">
            @foreach (var query in Model.Queries)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">@query.Name</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text text-muted">
                                @if (!string.IsNullOrEmpty(query.Description))
                                {
                                    @query.Description
                                }
                                else
                                {
                                    <em>Sem descrição</em>
                                }
                            </p>
                            <hr>
                            <small class="text-muted">
                                <i class="fas fa-calendar"></i> Criada em: @query.CreatedAt.ToString("dd/MM/yyyy HH:mm")<br>
                                <i class="fas fa-sync"></i> Atualizada em: @query.UpdatedAt.ToString("dd/MM/yyyy HH:mm")<br>
                                <i class="fas fa-user"></i> Por: @query.CreatedBy
                            </small>
                        </div>
                        <div class="card-footer">
                            <div class="btn-group" role="group">
                                <a href="@Url.Action("Details", new { id = query.Id })" 
                                   class="btn btn-sm btn-info" title="Ver Detalhes">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", new { id = query.Id })" 
                                   class="btn btn-sm btn-primary" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button onclick="duplicateQuery(@query.Id)" 
                                        class="btn btn-sm btn-secondary" title="Duplicar">
                                    <i class="fas fa-copy"></i>
                                </button>
                                <button onclick="deleteQuery(@query.Id, '@query.Name')" 
                                        class="btn btn-sm btn-danger" title="Excluir">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Paginação -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Navegação de páginas">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber - 1, searchTerm = Model.SearchTerm })">
                            Anterior
                        </a>
                    </li>
                    
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i, searchTerm = Model.SearchTerm })">
                                @i
                            </a>
                        </li>
                    }
                    
                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber + 1, searchTerm = Model.SearchTerm })">
                            Próxima
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-info">
            <h4><i class="fas fa-info-circle"></i> Nenhuma query encontrada</h4>
            <p>
                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <text>Nenhuma query corresponde aos critérios de busca.</text>
                }
                else
                {
                    <text>Você ainda não tem queries salvas. Comece criando uma nova!</text>
                }
            </p>
            <a href="@Url.Action("Index", "QueryBuilder")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Criar Nova Query
            </a>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script>
        function duplicateQuery(id) {
            if (confirm('Deseja duplicar esta query?')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Duplicate")';
                
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'id';
                input.value = id;
                
                form.appendChild(input);
                document.body.appendChild(form);
                form.submit();
            }
        }

        function deleteQuery(id, name) {
            if (confirm(`Tem certeza que deseja excluir a query "${name}"?`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Delete")';
                
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'id';
                input.value = id;
                
                form.appendChild(input);
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}
