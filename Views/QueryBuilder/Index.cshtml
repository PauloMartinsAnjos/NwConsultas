@model NwConsultas.Models.ViewModels.QueryBuilderViewModel

@{
    ViewData["Title"] = "Query Builder Visual";
}

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col-12">
            <h1><i class="fas fa-tools"></i> Query Builder Visual</h1>
            <p class="text-muted">Construa consultas SQL de forma visual sem escrever código</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Erro:</strong> @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Painel de Seleção de Tabelas -->
        <div class="col-md-3">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-table"></i> Tabelas Disponíveis</h5>
                </div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    <input type="text" id="tableSearch" class="form-control mb-2" placeholder="Buscar tabela...">
                    <div id="tableList">
                        @if (Model.AvailableTables != null && Model.AvailableTables.Any())
                        {
                            @foreach (var table in Model.AvailableTables)
                            {
                                <div class="table-item mb-1">
                                    <button class="btn btn-outline-primary btn-sm w-100 text-start" 
                                            onclick="selectTable('@table.TableName')">
                                        <i class="fas fa-plus"></i> @table.TableName
                                    </button>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">Nenhuma tabela disponível</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Tabelas Selecionadas -->
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h6><i class="fas fa-check-circle"></i> Tabelas Selecionadas</h6>
                </div>
                <div class="card-body" id="selectedTables">
                    <p class="text-muted">Nenhuma tabela selecionada</p>
                </div>
            </div>
        </div>

        <!-- Painel Principal de Construção -->
        <div class="col-md-9">
            <!-- Abas -->
            <ul class="nav nav-tabs" id="builderTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="columns-tab" data-bs-toggle="tab" 
                            data-bs-target="#columns" type="button" role="tab">
                        <i class="fas fa-columns"></i> Colunas
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="joins-tab" data-bs-toggle="tab" 
                            data-bs-target="#joins" type="button" role="tab">
                        <i class="fas fa-link"></i> JOINs
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="filters-tab" data-bs-toggle="tab" 
                            data-bs-target="#filters" type="button" role="tab">
                        <i class="fas fa-filter"></i> Filtros
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="sql-tab" data-bs-toggle="tab" 
                            data-bs-target="#sql" type="button" role="tab">
                        <i class="fas fa-code"></i> SQL Preview
                    </button>
                </li>
            </ul>

            <div class="tab-content border border-top-0 p-3" id="builderTabsContent">
                <!-- Aba Colunas -->
                <div class="tab-pane fade show active" id="columns" role="tabpanel">
                    <h5>Selecione as Colunas</h5>
                    <div id="columnsContainer">
                        <p class="text-muted">Selecione uma tabela para visualizar suas colunas</p>
                    </div>
                </div>

                <!-- Aba JOINs -->
                <div class="tab-pane fade" id="joins" role="tabpanel">
                    <h5>Configurar JOINs</h5>
                    <button class="btn btn-primary btn-sm mb-3" onclick="addJoin()">
                        <i class="fas fa-plus"></i> Adicionar JOIN
                    </button>
                    <div id="joinsContainer">
                        <p class="text-muted">Nenhum JOIN configurado</p>
                    </div>
                </div>

                <!-- Aba Filtros -->
                <div class="tab-pane fade" id="filters" role="tabpanel">
                    <h5>Configurar Filtros (WHERE)</h5>
                    <button class="btn btn-primary btn-sm mb-3" onclick="addFilter()">
                        <i class="fas fa-plus"></i> Adicionar Filtro
                    </button>
                    <div id="filtersContainer">
                        <p class="text-muted">Nenhum filtro configurado</p>
                    </div>
                </div>

                <!-- Aba SQL -->
                <div class="tab-pane fade" id="sql" role="tabpanel">
                    <h5>SQL Gerado</h5>
                    <pre id="sqlPreview" class="bg-dark text-white p-3"><code>-- Nenhuma query construída ainda</code></pre>
                    <button class="btn btn-success" onclick="executeQuery()">
                        <i class="fas fa-play"></i> Executar Query
                    </button>
                    <button class="btn btn-primary" onclick="saveQuery()">
                        <i class="fas fa-save"></i> Salvar Query
                    </button>
                </div>
            </div>

            <!-- Botões de Ação -->
            <div class="mt-3">
                <button class="btn btn-info" onclick="generateSql()">
                    <i class="fas fa-sync"></i> Gerar/Atualizar SQL
                </button>
                <button class="btn btn-secondary" onclick="clearAll()">
                    <i class="fas fa-trash"></i> Limpar Tudo
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Salvar Query -->
<div class="modal fade" id="saveQueryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Salvar Query</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="queryName" class="form-label">Nome da Query *</label>
                    <input type="text" class="form-control" id="queryName" required>
                </div>
                <div class="mb-3">
                    <label for="queryDescription" class="form-label">Descrição</label>
                    <textarea class="form-control" id="queryDescription" rows="3"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="confirmSave()">Salvar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="~/js/querybuilder.js"></script>
    <script>
        // Inicializar com dados do modelo
        const savedQueryId = @(Model.SavedQueryId ?? 0);
        const savedQueryName = '@(Model.QueryName ?? "")';
        const savedQueryDescription = '@(Model.QueryDescription ?? "")';
        
        @if (!string.IsNullOrEmpty(Model.GeneratedSql))
        {
            <text>
            const initialSql = `@Html.Raw(Model.GeneratedSql)`;
            document.getElementById('sqlPreview').innerHTML = '<code>' + initialSql + '</code>';
            </text>
        }
    </script>
}
